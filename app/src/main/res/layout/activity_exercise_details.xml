<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tracking.ExerciseDetailsActivity">
    <Button
        android:id="@+id/button_update_exe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="OnEditExeClick"
        android:text="@string/edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.896"
        app:layout_constraintVertical_bias="0.896" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="550dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:id="@+id/details_main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="1dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/acc"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:text="@string/activityType"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/exerciseType_dt"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="18sp"
                android:enabled="false"

            />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:text="@string/exercise_date_dt"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/exerciseDate_dt"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="18sp"
                android:enabled="false"
             />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:text="@string/duration_dt"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/exerciseDuration_dt"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="18sp"
                android:enabled="false"
                 />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:text="@string/distance_dt"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
     <EditText
                android:id="@+id/distance_dt"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="18sp"
                android:enabled="false"
              />
            <TextView
                android:id="@+id/energyExpended_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:text="@string/energyExpended"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/energyExpended_dt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="18sp"
                android:enabled="false"
              />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>